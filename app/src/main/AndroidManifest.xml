<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marcin.pracadyplomowa">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreditorsActivity"
            android:label="@string/title_activity_creditors"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddingCreditorActivity"
            android:label="@string/title_activity_add_creditors"/>
        <activity
            android:name=".EditingCreditorActivity"
            android:label="@string/title_activity_edit_creditors"/>
        <activity
            android:name=".CalendarAcitivity"
            android:label="@string/title_activity_calendar"/>

        <service
            android:name=".Service"
            android:enabled="true" />

        <activity
            android:name=".NotifyActivity"
            android:label="@string/title_activity_notification"/>
        <activity
            android:name=".PlotActivity"
            android:label="@string/title_activity_plot"/>
    </application>

</manifest>